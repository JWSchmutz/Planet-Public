<div class="login-body">
    <nav class="navbar navbar-expand-lg navbar-light bg-main">
        <h1 class="display-4 text-white title">
            <i class="fas fa-globe-americas"></i> <span id="title"> Planet Together</span>
        </h1>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse " id="navbarNav">
            <div class="button-holder ml-auto text-white">Don't have an account? &nbsp;
                <button type="button" class="btn btn-outline-main btn-light" id="toRegister">
                    Sign Up
                </button>
            </div>
        </div>
    </nav>
    <br>

    <div class="card" style="width: 18rem;" id="login-card">
        <div class="card-header bg-main text-white">
            Login
        </div>
        <div class="card-body">
            <h3 id="message"></h3>
            <form action="/users/login" method="POST">
                <div class="form-group">
                    <label for="login-email">Email address</label>
                    <input type="email" name="email" class="form-control" id="login-email" aria-describedby="emailHelp"
                        placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="login-pass">Password</label>
                    <input type="password" name="password" class="form-control" id="login-pass" placeholder="Password">
                </div>

                <button type="submit" class="btn btn-main" id="login-button">Login</button>
            </form>
        </div>
    </div>
</div>